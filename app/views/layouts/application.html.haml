!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AnimalSearch
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application'
    %link{ :href => 'https://fonts.googleapis.com/css?family=Londrina+Shadow', rel: 'stylesheet' }
  %body
    .menu
      .header
        .main-title
          %a{ href: "/", class: "main-title__logo"} 
            Animal Search
          .user-management
            - if user_signed_in?
              .post__btn__text
                投稿する
                = icon('far', 'hand-point-right')
                = link_to "posts/new", class: "post__btn" do
                  = icon('fas', 'camera')
              = link_to "ログアウト", "/users/sign_out", class: "logout", method: :delete 
            - else
              = link_to "ログイン", "/users/sign_in", class: "post" 
              = link_to "新規登録", "/users/sign_up", class: "post" 
    = render 'layouts/notifications'
    = yield